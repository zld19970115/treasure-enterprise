<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="io.treasure.dao.MerchantOrderDao">

    <resultMap type="io.treasure.entity.MerchantOrderEntity" id="merchantOrderMap">

        <result property="id" column="id"/>
        <result property="orderNum" column="order_num"/>
        <result property="money" column="money"/>
        <result property="times" column="times"/>
        <result property="merchantRoomId" column="merchant_room_id"/>
        <result property="type" column="type"/>
        <result property="merchantId" column="merchant_id"/>
        <result property="time" column="time"/>
        <result property="payStatus" column="pay_status"/>
        <result property="refundReason" column="refund_reason"/>
        <result property="refundDate" column="refund_date"/>
        <result property="verifyReason" column="verify_reason"/>
        <result property="verify" column="verify"/>
        <result property="verifyDate" column="verify_date"/>
        <result property="status" column="status"/>
        <result property="remark" column="remark"/>
        <result property="updateDate" column="update_date"/>
        <result property="createDate" column="create_date"/>
        <result property="creator" column="creator"/>
        <result property="updater" column="updater"/>
        <result property="transactionid" column="transactionid"/>
        <result property="noncestr" column="noncestr"/>
        <result property="outtradeno" column="outtradeno"/>
        <result property="perpayId" column="perpay_id"/>

    </resultMap>
    <update id="updateStatus" parameterType="io.treasure.entity.MerchantOrderEntity">
        update ct_merchant_order set status=#{status} where id=#{id}
    </update>
    <update id="updateStatusAndReason" parameterType="io.treasure.entity.MerchantOrderEntity">
        update ct_merchant_order set status=#{status},verify=#{verify},verify_date=#{verifyDate},verify_reason=#{verifyReason} where id=#{id}
    </update>

    <select id="countTodayPaystaus" parameterType="io.treasure.entity.MerchantOrderEntity" resultType="Map">

        select (select count(*) from ct_merchant_order o where (pay_status=6 or pay_status=7)  AND
            create_date BETWEEN CONCAT(CURDATE()," 00:00:00") and CONCAT(CURDATE()," 23:59:59") and merchant_id =#{merchantId}  and status=#{status}   )  refundNum ,
            (select count(*) from ct_merchant_order o where pay_status=8
            and create_date BETWEEN CONCAT(CURDATE()," 00:00:00") and CONCAT(CURDATE()," 23:59:59") and  merchant_id =#{merchantId}  and status=#{status} )  appNum ,
            (select count(*) from ct_merchant_order o where  create_date BETWEEN CONCAT(CURDATE()," 00:00:00")
            and CONCAT(CURDATE()," 23:59:59") and  merchant_id =#{merchantId}  and status=#{status} )  nums,
            (select sum(money) from ct_merchant_order o where  create_date BETWEEN CONCAT(CURDATE()," 00:00:00")
            and CONCAT(CURDATE()," 23:59:59") and  merchant_id =#{merchantId}  and status=#{status} )  moneys


    </select>
</mapper>