<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.treasure.dao.UserGiftDao">

    <resultMap type="io.treasure.entity.UserGiftEntity" id="UserGiftMap">

        <result property="id" column="id"/>
        <result property="number" column="number"/>
        <result property="userNumber" column="user_number"/>
        <result property="password" column="password"/>
        <result property="status" column="status"/>
        <result property="updateDate" column="update_date"/>
        <result property="createDate" column="create_date"/>
        <result property="creator" column="creator"/>
        <result property="updater" column="updater"/>
        <result property="money" column="money"/>
        <result property="endDate" column="end_date"/>
    </resultMap>

    <resultMap type="io.treasure.entity.ClientUserEntity" id="clientUserMap">

        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="username" column="username"/>
        <result property="idCard" column="id_card"/>
        <result property="idcardFrontImg" column="idcard_front_img"/>
        <result property="idcardBackImg" column="idcard_back_img"/>
        <result property="sex" column="sex"/>
        <result property="age" column="age"/>
        <result property="birth" column="birth"/>
        <result property="password" column="password"/>
        <result property="mobile" column="mobile"/>
        <result property="headImg" column="head_img"/>
        <result property="integral" column="integral"/>
        <result property="balance" column="balance"/>
        <result property="coin" column="coin"/>
        <result property="gift" column="gift"/>
        <result property="level" column="level"/>
        <result property="openid" column="openid"/>
        <result property="unionid" column="unionid"/>
        <result property="status" column="status"/>
        <result property="origin" column="origin"/>
        <result property="way" column="way"/>
        <result property="updateDate" column="update_date"/>
        <result property="createDate" column="create_date"/>
        <result property="creator" column="creator"/>
        <result property="updater" column="updater"/>
    </resultMap>
    <update id="updateUnumberAndStatus"  parameterType="io.treasure.entity.UserGiftEntity">
        update ct_user_gift set user_number= #{userNumber} , status = 1 where id= #{id}


    </update>
    <update id="updateGift" parameterType="io.treasure.entity.UserGiftEntity">

         update ct_client_user set gift= #{money} where id= #{id}
    </update>
    <select id="selectBynumber"  parameterType="io.treasure.entity.UserGiftEntity" resultType="io.treasure.entity.ClientUserEntity">
    select * from ct_client_user where mobile = #{userNumber}
    </select>
    <select id="selectStatus"  parameterType="io.treasure.entity.UserGiftEntity" resultType="io.treasure.entity.UserGiftEntity">
         select * from ct_user_gift where number = #{number} and password = #{password}
    </select>
   <insert id="insertGift" parameterType="io.treasure.entity.UserGiftEntity">
       INSERT INTO `treasure`.`ct_user_gift` ( `number`, `password`,   `money`,  `create_date`,  `end_date`) VALUES ( #{number},#{password},#{money},#{createDate},#{endDate});
   </insert>

</mapper>