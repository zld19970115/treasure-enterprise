<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="io.treasure.dao.RecordGiftDao">

    <insert id="insertRecordGift">
        insert into ct_record_gift (id ,userId,use_gift,balance_gift,status,create_date,creator )
         VALUES
        ( default ,#{userId},#{useGift},#{balanceGift},0,#{date},#{userId});
    </insert>

<!--    测试：移出部分字段 id , default ,-->
    <insert id="insertRecordGift2">
        insert into ct_record_gift (userId,use_gift,balance_gift,status,create_date,creator )
         VALUES
        (#{userId},#{useGift},#{balanceGift},1,#{date},#{userId});
    </insert>
    <select id="selectByUserId" resultType="io.treasure.dto.RecordGiftDTO">
        select * from ct_record_gift where userId = #{userId} and status = 3
    </select>

</mapper>